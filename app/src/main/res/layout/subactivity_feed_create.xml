<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".Feed.subActivity_Feed_Create">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#DDDDDD"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnBack"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="start|center_vertical"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/back_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="피드 작성"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/tvFinish"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginEnd="10dp"
                    android:text="완료"
                    android:textSize="18dp" />

            </FrameLayout>


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/feed_bottom_top_border">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivProfileImage"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginHorizontal="15dp"
                        android:layout_marginVertical="5dp"
                        android:src="@drawable/profile" />

                    <TextView
                        android:id="@+id/tvNickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="5dp"
                        android:text="닉네임"
                        android:textColor="#000000"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                </LinearLayout>

                <Button
                    android:id="@+id/btnImageUpload"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/textview_design"
                    android:text="이미지\n업로드" />

            </FrameLayout>

            <LinearLayout
                android:id="@+id/llFeedBookSearch"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvFeedBookTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="피드로 작성할 책을 검색해주세요" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/feed_bottom_top_border"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="10dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <!-- 이부분 너무 딱딱한데 평가하기라는 텍스트 말고 다른 참신한거 없나.. 그림같은? 레이팅바도 마찬가지 -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="평가하기"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                </LinearLayout>

                <RatingBar
                    style="@style/Widget.AppCompat.RatingBar.Indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical|end"
                    android:isIndicator="false"
                    android:numStars="5"
                    android:stepSize="0.5" />

            </LinearLayout>


            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/llLabel"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvlabel1"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:layout_marginVertical="10dp"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/label_design"
                        android:gravity="center"
                        android:paddingHorizontal="10dp"
                        android:text="   +   "
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/tvlabel2"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:layout_marginVertical="10dp"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/label_design"
                        android:gravity="center"
                        android:paddingHorizontal="10dp"
                        android:text="테스트중"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/tvlabel3"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:layout_marginVertical="10dp"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/label_design"
                        android:gravity="center"
                        android:paddingHorizontal="10dp"
                        android:text="테스트중"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/tvlabel4"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:layout_marginVertical="10dp"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/label_design"
                        android:gravity="center"
                        android:paddingHorizontal="10dp"
                        android:text="테스트중"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/tvlabel5"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:layout_marginVertical="10dp"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/label_design"
                        android:gravity="center"
                        android:paddingHorizontal="10dp"
                        android:text="테스트중"
                        android:textSize="18dp" />

                </LinearLayout>

            </HorizontalScrollView>

            <ImageView
                android:id="@+id/ivpicture"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:background="@drawable/feed_bottom_top_border"
                android:orientation="vertical">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_margin="15dp"
                    android:background="#FFFFFF"
                    android:gravity="top"
                    android:hint="리뷰를 남겨주세요"
                    android:textSize="17dp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>