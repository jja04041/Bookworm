<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".bottomMenu.profile.views.ProfileInfoActivity">

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/SFLoading"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/shimmer_activity_profile_info" />

    </com.facebook.shimmer.ShimmerFrameLayout>

    <LinearLayout
        android:id="@+id/llResult"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/setting"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/feed_bottom_border_only"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnBack"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="start|center_vertical"
                android:layout_marginStart="20dp"
                android:background="@drawable/back_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="프로필"
                android:textSize="13dp"
                android:textColor="@color/black"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="#88A3CCA3"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="25dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivProfileImage"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/profile" />
<!--                <Button-->
<!--                    android:id="@+id/btnFollower"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:text="팔로우"-->
<!--                    android:layout_height="wrap_content" />-->
<!--                <Button-->
<!--                    android:id="@+id/btnFollowing"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:text="팔로잉"-->
<!--                    android:layout_height="wrap_content" />-->


                <TextView
                    android:id="@+id/tvNickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:text="닉네임"
                    android:textColor="#000000"
                    android:textSize="17dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvFollowCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="###" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="명이 팔로우함" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/tvFollow"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_gravity="end"
                android:layout_margin="10dp"
                android:background="@drawable/selector_selected"
                android:elevation="10dp"
                android:gravity="center"
                android:text="팔로우"
                android:textColor="@color/white"
                android:textSize="17dp" />

            <ImageView
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="15dp"
                android:background="#33000000"
                android:src="@drawable/appicon_bookworm" />

        </FrameLayout>

    </LinearLayout>


</LinearLayout>